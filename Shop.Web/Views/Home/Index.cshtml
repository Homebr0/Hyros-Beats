@{
    ViewData["Title"] = "Home Page";
}
    <head>
        <style>
            .carousel {

                width:  100%;
                height: 400px;
            }

            .carousel-inner > .carousel-item {
                /*object-fit: cover;*/
                transform: translate(0%, -40%);
                height: 400px;
                width: 100%;
                /*overflow: hidden;*/
            }
            

            
                      
            
        </style>
    </head>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/LayoutImages/Cacti.jpg" class="img-fluid" alt="Image">
            </div>
            <div class="carousel-item">
                <img src="~/images/LayoutImages/apple products.jpg" class="d-block w-100" alt="Image">
            </div>
            <div class="carousel-item">
                <img src="~/images/LayoutImages/lilmonke.jpg" class="d-block w-100" alt="Image">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="jumbotron">
        <h1 class="display-4">The Shop</h1>
        <p class="lead">Browse and buy some cool things!</p>
        <hr class="my-4">
        <p>This application was built by <a href="https://www.linkedin.com/in/jsndavila/">Jason Davila</a> using ASP.Net Core.</p>
    </div>
